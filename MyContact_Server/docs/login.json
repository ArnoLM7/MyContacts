							"properties": {
								"email": { "type": "string", "example": "john@example.com" },
								"password": { "type": "string", "example": "123456" }
							}
						}
					}
				}
			},
			"responses": {
				"200": {
					"description": "Connexion r√©ussie"
				},
				"400": {
					"description": "Identifiants invalides"
				}
			}
		}
	}
}
